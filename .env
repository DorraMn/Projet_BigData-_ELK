MONGO_COLLECTION=uploads

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# Elasticsearch
ELASTICSEARCH_HOST=http://localhost:9200

# Kibana
KIBANA_HOST=http://localhost:5601

# Logstash
LOGSTASH_HOST=http://localhost:9600
