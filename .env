# Versions for ELK stack images (8.x)
ELASTIC_VERSION=8.10.3
KIBANA_VERSION=8.10.3
LOGSTASH_VERSION=8.10.3

# Flask webapp
FLASK_ENV=development
FLASK_RUN_PORT=8000

# JWT Authentication
JWT_SECRET_KEY=logstream-studio-secret-key-change-in-production-2026
JWT_EXPIRATION_HOURS=24

# Admin Credentials
ADMIN_USERNAME=admin
